
package fecha;

import java.util.Scanner;

/* Crea una nueva clase FechaCalendario. 
 * La clase contendrá  un  constructor con los parámetros día, mes y año, 
 * el método toString, el método comprobarFecha para comprobar si la fecha 
 * es correcta y el método siguienteDía para modificar la fecha actual 
 * por la del día siguiente.

 */
public class fechaCalendario {
	static Scanner sc=new Scanner(System.in);

	private int dia;
	private int mes;
	private int año;
	
	//Constructor
	public fechaCalendario(int dia,int mes, int año) {
		this.dia=dia;
		this.mes=mes;
		this.año=año;
		
	}
	public void comprobarFecha() {
		switch(this.mes) {
		case 1:
			if((this.dia>=1)&&(this.dia<=31)) {
				this.dia=this.dia;
				System.out.println("La fecha introducida es correcta");
			}else {
				System.out.println("Fecha no válida");
			}
			break;
		case 2:
			if((this.dia>=1)&&(this.dia<=28)) {
				this.dia=this.dia;
				System.out.println("La fecha introducida es correcta");
			}else {
				System.out.println("Fecha no válida");
			}
			break;
		case 3:
			if((this.dia>=1)&&(this.dia<=31)) {
				this.dia=this.dia;
				System.out.println("La fecha introducida es correcta");
			}else {
				System.out.println("Fecha no válida");
			}
			break;
		case 4:
			if((this.dia>=1)&&(this.dia<=30)) {
				this.dia=this.dia;
				System.out.println("La fecha introducida es correcta");
			}else {
				System.out.println("Fecha no válida");
			}
			break;
		case 5:
			if((this.dia>=1)&&(this.dia<=31)) {
				this.dia=this.dia;
				System.out.println("La fecha introducida es correcta");
			}else {
				System.out.println("Fecha no válida");
			}
			break;
		case 6:
			if((this.dia>=1)&&(this.dia<=30)) {
				this.dia=this.dia;
				System.out.println("La fecha introducida es correcta");
			}else {
				System.out.println("Fecha no válida");
			}
			break;
		case 7:
			if((this.dia>=1)&&(this.dia<=31)) {
				this.dia=this.dia;
				System.out.println("La fecha introducida es correcta");
			}else {
				System.out.println("Fecha no válida");
			}
			break;
		case 8:
			if((this.dia>=1)&&(this.dia<=31)) {
				this.dia=this.dia;
				System.out.println("La fecha introducida es correcta");
			}else {
				System.out.println("Fecha no válida");
			}
			break;
		case 9:
			if((this.dia>=1)&&(this.dia<=30)) {
				this.dia=this.dia;
				System.out.println("La fecha introducida es correcta");
			}else {
				System.out.println("Fecha no válida");
			}
			break;
		case 10:
			if((this.dia>=1)&&(this.dia<=31)) {
				this.dia=this.dia;
				System.out.println("La fecha introducida es correcta");
			}else {
				System.out.println("Fecha no válida");
			}
			break;
		case 11:
			if((this.dia>=1)&&(this.dia<=30)) {
				this.dia=this.dia;
				System.out.println("La fecha introducida es correcta");
			}else {
				System.out.println("Fecha no válida");
			}
			break;
		case 12:
			if((this.dia>=1)&&(this.dia<=31)) {
				this.dia=this.dia;
				System.out.println("La fecha introducida es correcta");
			}else {
				System.out.println("Fecha no válida");
			}
			break;
		default:
				System.out.println("El mes que ha introducido no es correcto");
		}
	}
	//Método to String para mostrar fecha
	@Override
	public String toString() {
		return "La fecha introducida es [dia=" + this.dia + ", mes=" + this.mes + ", año=" + this.año + "]";
	}
	//Método para adelantar un día
	public void siguienteDia() {
		switch(this.mes) {
		case 1:
			if((this.dia>=1)&&(this.dia<31)) {
				this.dia=this.dia+1;
				System.out.println("La fecha se ha adelantado un día");
			}else {
				this.dia=1;
				this.mes=this.mes+1;
				System.out.println("La fecha se ha adelantado un día");
			}
			break;
		case 2:
			if((this.dia>=1)&&(this.dia<28)) {
				this.dia=this.dia+1;
				System.out.println("La fecha se ha adelantado un día");
			}else {
				this.dia=1;
				this.mes=this.mes+1;
				System.out.println("La fecha se ha adelantado un día");
			}
			break;
		case 3:
			if((this.dia>=1)&&(this.dia<31)) {
				this.dia=this.dia+1;
				System.out.println("La fecha se ha adelantado un día");
			}else {
				this.dia=1;
				this.mes=this.mes+1;
				System.out.println("La fecha se ha adelantado un día");
			}
			break;
		case 4:
			if((this.dia>=1)&&(this.dia<30)) {
				this.dia=this.dia+1;
				System.out.println("La fecha se ha adelantado un día");
			}else {
				this.dia=1;
				this.mes=this.mes+1;
				System.out.println("La fecha se ha adelantado un día");
			}
			break;
		case 5:
			if((this.dia>=1)&&(this.dia<31)) {
				this.dia=this.dia+1;
				System.out.println("La fecha se ha adelantado un día");
			}else {
				this.dia=1;
				this.mes=this.mes+1;
				System.out.println("La fecha se ha adelantado un día");
			}
			break;
		case 6:
			if((this.dia>=1)&&(this.dia<30)) {
				this.dia=this.dia+1;
				System.out.println("La fecha se ha adelantado un día");
			}else {
				this.dia=1;
				this.mes=this.mes+1;
				System.out.println("La fecha se ha adelantado un día");
			}
			break;
		case 7:
			if((this.dia>=1)&&(this.dia<31)) {
				this.dia=this.dia+1;
				System.out.println("La fecha se ha adelantado un día");
			}else {
				this.dia=1;
				this.mes=this.mes+1;
				System.out.println("La fecha se ha adelantado un día");
			}
			break;
		case 8:
			if((this.dia>=1)&&(this.dia<31)) {
				this.dia=this.dia+1;
				System.out.println("La fecha se ha adelantado un día");
			}else {
				this.dia=1;
				this.mes=this.mes+1;
				System.out.println("La fecha se ha adelantado un día");
			}
			break;
		case 9:
			if((this.dia>=1)&&(this.dia<30)) {
				this.dia=this.dia+1;
				System.out.println("La fecha se ha adelantado un día");
			}else {
				this.dia=1;
				this.mes=this.mes+1;
				System.out.println("La fecha se ha adelantado un día");
			}
			break;
		case 10:
			if((this.dia>=1)&&(this.dia<31)) {
				this.dia=this.dia+1;
				System.out.println("La fecha se ha adelantado un día");
			}else {
				this.dia=1;
				this.mes=this.mes+1;
				System.out.println("La fecha se ha adelantado un día");
			}
			break;
		case 11:
			if((this.dia>=1)&&(this.dia<30)) {
				this.dia=this.dia+1;
				System.out.println("La fecha se ha adelantado un día");
			}else {
				this.dia=1;
				this.mes=this.mes+1;
				System.out.println("La fecha se ha adelantado un día");
			}
			break;
		case 12:
			if((this.dia>=1)&&(this.dia<31)) {
				this.dia=this.dia+1;
				System.out.println("La fecha se ha adelantado un día");
			}else {
				this.dia=1;
				this.mes=1;
				this.año=this.año+1;
				System.out.println("La fecha se ha adelantado un día");
			}
			break;
		default:
				System.out.println("El mes que ha introducido no es correcto");
		}
	}
	
	public static void main(String[] args) {
	fechaCalendario fecha=new fechaCalendario(31,10,1999);
	
	System.out.println(fecha.toString());
	System.out.println("Introduzca lo que quiere hacer:");
	System.out.println("1. Comprobar si fecha es correcta");
	System.out.println("2. Adelantar un día a la fecha");
	System.out.println("3. Mostrar fecha");
	int contador=0;
	while(contador!=10) {
	int opcion=sc.nextInt();
	switch(opcion) {
	case 1:
		System.out.println("Ha elegido la opción comprobar fecha");
		fecha.comprobarFecha();
		contador++;
		break;
	case 2:
		System.out.println("Ha elegido la opción adelantar un día la fecha");
		fecha.siguienteDia();
		contador++;
		break;
	case 3:
		System.out.println("Ha elegido la opción mostrar fecha");
		System.out.println(fecha.toString());
		contador++;
			}
		}
	}
}
