
package ejerciciosPseudo;

import java.util.Arrays;
import java.util.Scanner;

public class pseudo {
	static Scanner sc=new Scanner(System.in);
	
	public static int sumaNumeros() {
		//Leer dos números, sumarlos y escribir su resultado
		int num1 = 0;
		int num2 = 0;
		return num1+num2;
	}
	public static int mayor() {
		//Leer dos números e indicar cual es el mayor
		System.out.println("Escribe un número");
		int num1=sc.nextInt();
		System.out.println("Escribe otro número");
		int num2=sc.nextInt();
		if(num1>num2)
			return num1;
		else
			
		return num2;
		
	}
	public static void arrayCreacion(int[]arreglo) {
		//leer tres números e indicar cual es el mayor y cual el menor
		//Los he metido en array y he calculado max y min
		System.out.println("Escribe un número");
		int contador=0;
		
		
		for(int i=0;i<arreglo.length;i++) {
			arreglo[i]=sc.nextInt();
			
			
		}
		System.out.println(Arrays.toString(arreglo));
		
		
	}
	public static void maximoMinimo(int[]arreglo) {
		int maximo=arreglo[0];
		int minimo=arreglo[0];
		for(int i=0;i<arreglo.length;i++) {
			
			if (maximo < arreglo[i])
				maximo = arreglo[i];
			if (minimo > arreglo[i])
				minimo = arreglo[i];
		}
		System.out.println("Maximo: "+maximo);
		System.out.println("Minimo: "+minimo);
		
	}
	
	public static void main(String[] args) {
		int[]arreglo=new int[3];
		
		System.out.println("La suma de los dos números es "+pseudo.sumaNumeros());
		System.out.println("El valor mayor es "+pseudo.mayor());
		pseudo.arrayCreacion(arreglo);
		pseudo.maximoMinimo(arreglo);
	}

}
